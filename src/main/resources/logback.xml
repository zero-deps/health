<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) %X{akkaSource} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="${logLevel:-DEBUG}">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
