{
  "scripts": {
    "dep": "bower prune && bower update",
    "com": "purs compile 'bower_components/purescript-*/src/**/*.purs' 'src/main/purs/**/*.purs' -o 'target/purs_out' && purs bundle 'target/purs_out/**/*.js' -o 'src/main/resources/assets/js/main.js' -m Main",
    "rep": "purs repl 'bower_components/purescript-*/src/**/*.purs'"
  },
  "devDependencies": {
    "bower": "*",
    "purescript": "0.13.2"
  }
}
